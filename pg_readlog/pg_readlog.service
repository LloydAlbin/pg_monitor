[Unit]
Description=PostgreSQL database log file monitor
Documentation=https://github.com/LloydAlbin/pg_monitor/tree/master/pg_readlog
After=network.target

[Service]
Type=simple

User=postgres
Group=postgres

ExecStart=nohup /pgdata_local/pg_readlog.sh db-delphi kw-alpha-m03.pc.scharp.org reports 30002 /pgdata_local/pg_log /pgdata_local /usr/local/postgres-current/bin &

[Install]
WantedBy=multi-user.target
